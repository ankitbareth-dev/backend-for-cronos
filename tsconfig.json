{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noImplicitAny": true,

    "baseUrl": "./",
    "paths": {
      "*": ["./*"]
    },

    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
